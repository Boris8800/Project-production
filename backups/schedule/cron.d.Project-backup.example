# Install on the VPS as: /etc/cron.d/Project-backup
# Runs daily at 02:15 UTC
SHELL=/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

15 2 * * * root cd /opt/Project-production && BACKUP_DIR=/opt/Project-production/backups KEEP_DAYS=14 bash scripts/Project.sh backup >> backups/logs/backup.log 2>&1
